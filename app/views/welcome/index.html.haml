#search
  %h2 What do you want to learn or improve?
  %form#submit-form
    %input#search-field{ :name => 'search-field', :type => "text", :placeholder => "i.e. play guitar, speak spanish, solve rubix cube"}
    %button#search-button.btn-custom search resources
.container
  #rating-form.hidden.modal-content.col-md-3
    %button#x-button x
    %h3 Rate This
    %form
      %label Overall Rating
      %select#overall-rating
        %option 5
        %option 4
        %option 3
        %option 2
        %option 1
      %br
      %label Skill Level
      %select#skill-level
        %option newbie
        %option novice
        %option advanced
        %option expert
      -if current_user
        %input#user-id{type: "hidden", value: "#{current_user.id}" }
      %br
      %input#submit-button{type: "submit", value: "Submit"}

  #results.span6.center
    #results-header.row
      .col-md-12
        .col-md-2.col-md-offset-5
          %h3 Results
        #sort-by.col-md-3.col-md-offset-2
          %p
            Sort by
            %select#sort-by-select
              %option search ranking
              %option overall rating
              %option newbie rating
              %option novice rating
              %option advanced rating
              %option expert rating
    %h4#successful-rating
      successfully rated!
    #throbber.hidden=image_tag('ajax-loader.gif', height: '25')
    #web-results
      %div


